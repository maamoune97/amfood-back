{{form_start(form)}}
<div class="row">
    <div class="col-12 col-md-6">
        {{form_row(form.name)}}
    </div>
    <div class="col-12 col-md-6">
        {{form_row(form.image)}}
    </div>
</div>
<div class="row">
    <div class="col-12 col-md-10">
        {{form_row(form.ingredient)}}
    </div>
    <div class="col-12 col-md-2">
        {{form_row(form.price)}}
    </div>
</div>
<div class="float-right form-group">
    <button type="submit" class="btn btn-success">{{submitBtnLabel}}</button>
</div>
{{form_end(form)}}