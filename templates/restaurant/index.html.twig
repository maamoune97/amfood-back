{% extends "base.html.twig" %}

{% block title %}Réstaurants{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="text-right mb-2">
        <a href="{{path('restaurant_new')}}" class="btn btn-primary"><i class="fas fa-plus fa-lg"></i> Nouveau réstaurant</a>
    </div>
    <h1 class="display-5 mb-3" >Les restaurants</h1>
    {% if restaurants | length > 0 %}
        <table class="table table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>Nom</th>
                    <th>Ville</th>
                    <th>Téléphone</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for restaurant in restaurants %}
                <tr class="align-middle">
                    <td><img src="{{ asset("/media/images/uploads/restaurants/" ~ restaurant.imageLogo) }}" alt="logo - {{restaurant.name}}" class="img-thumbnail img-fluid img-mini"></td>
                    <td>{{restaurant.name}}</td>
                    <td>{{restaurant.location}}</td>
                    <td>{{restaurant.phone}}</td>
                    <td>{{restaurant.email}}</td>
                    <td>
                        <a href="{{path('restaurant_show', {'id': restaurant.id})}}" title="Voir" class="btn btn-outline-primary btn-sm mr-3"><i class="fas fa-eye fa-lg"></i></a>
                        <a href="#" data-item="{{restaurant.id}}" title="Supprimer" class="btn btn-outline-danger btn-sm remove-restaurant"><i class="fas fa-trash fa-lg"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="navigation d-flex justify-content-center">
            {{ knp_pagination_render(restaurants) }}
        </div>
    {% else %}
        <p>Aucun réstaurant présent pour l'instant</p>
    {% endif %}
</div>
{% endblock %}
