{% extends 'base.html.twig' %}
{% set sectionExist = form.vars.value.id ? true : false %}

{% block title %}creation Section{% endblock %}

{% block body %}
<div class="container">
    <h1>Information sur la section</h1>
    {{form_start(form)}}
    <div class="row">
        <div class="col-12 col-md-4">
            {{form_row(form.name)}}
        </div>
        <div class="col-12 col-md-4">
            {{form_row(form.image)}}
        </div>
        <div class="col-12 col-md-4 d-flex align-items-end">
            {{form_row(form.status)}}
        </div>
    </div>
    <div class="float-right form-group">
        <button type="submit" class="btn btn-success">{{ sectionExist ? 'Modifier' : 'Ajouter'}}</button>
    </div>
    {{form_end(form)}}
</div>
{% endblock %}
